# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/cost_sentinel
DATABASE_SYNC_URL=postgresql://postgres:password@localhost:5432/cost_sentinel

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Multi-account AWS (optional)
AWS_ROLE_ARN=arn:aws:iam::123456789012:role/CostSentinelRole
AWS_EXTERNAL_ID=your-external-id

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
API_V1_STR=/api/v1
PROJECT_NAME=AWS Cost Sentinel

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","https://localhost:3000","http://localhost"]

# Monitoring
SENTRY_DSN=your-sentry-dsn-here

# Email Configuration (for reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@cost-sentinel.com

# Report Storage
REPORTS_BUCKET=cost-sentinel-reports
REPORTS_BASE_URL=https://reports.cost-sentinel.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Data Retention (in days)
COST_DATA_RETENTION_DAYS=395
LOG_RETENTION_DAYS=90

# Background Jobs
SYNC_FREQUENCY_HOURS=4
CLEANUP_FREQUENCY_HOURS=24

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_ENVIRONMENT=development